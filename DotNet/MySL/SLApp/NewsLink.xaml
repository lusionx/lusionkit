<UserControl x:Class="SLApp.NewsLink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="LayoutRoot" Background="White">
        <HyperlinkButton Canvas.ZIndex="1" x:Name="hlb_show" NavigateUri="" TargetName="_blank">
            <Image Width="400" Height="300" x:Name="img_show"/>
        </HyperlinkButton>
        <StackPanel Canvas.ZIndex="10" HorizontalAlignment="Right" Orientation="Horizontal" x:Name="foot" Width="400" Height="20" Margin="8,8,8,8" VerticalAlignment="Bottom">
           
        </StackPanel>
    </Grid>


</UserControl>
